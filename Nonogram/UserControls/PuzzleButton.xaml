<UserControl x:Class="Nonogram.UserControls.PuzzleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nonogram.UserControls"
             mc:Ignorable="d">
    
    <StackPanel Background="Transparent">
        <Grid Margin="30, 30, 30, 10"
              Background="#FFFDFD7F"
              Height="250"
              Width="250">
            <Button x:Name="button"  Background="Transparent">
                <StackPanel x:Name="PuzzledataLoadGrid"
                    Height="220"
                    Width="220"
                    Margin="15"
                    Background="GhostWhite"/>
            </Button>
        </Grid>
        <TextBlock x:Name="PuzzleName"
                   Margin="0, 0, 0, 10"
                   FontSize="40"
                   FontWeight="Bold"
                   Foreground="Purple"
                   Text="Name"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom">
        </TextBlock>
    </StackPanel>
</UserControl>
