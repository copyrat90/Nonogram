<Page x:Class="Nonogram.Pages.StartingGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nonogram.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="690" d:DesignWidth="1280"
      Title="StartingGamePage">

    <Grid Width="1280" Height="690">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Canvas>
                <Label Content="Starting game"
                       Canvas.Left="50"
                       FontSize="100"
                       FontFamily="/Font/#Pacifico"/>
                <Button
                        Canvas.Right="0"
                        Height="100"
                        Width="100"
                        Margin="50"
                        Click="ReturnButton_Click">
                    돌아가기
                </Button>
            </Canvas>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">
                <Button Content="퍼즐 선택"
                        FontSize="40"
                        Height="200"
                        Width="400"
                        Margin="0, 0, 0, 100"/>
            </Grid>
            <Grid Grid.Column="1">
                <Button Content="랜덤 퍼즐 생성"
                        FontSize="40"
                        Height="200"
                        Width="400"
                        Margin="0, 0, 0, 100"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
