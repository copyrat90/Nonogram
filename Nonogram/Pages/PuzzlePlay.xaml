<Page x:Class="Nonogram.Pages.PuzzlePlay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nonogram.Pages"
      xmlns:uc="clr-namespace:Nonogram.UserControls"
      xmlns:conv="clr-namespace:Nonogram.Classes.Helper.ValueConverter"
      mc:Ignorable="d" 
      d:DesignHeight="690" d:DesignWidth="1280"
      Title="PuzzlePlay">
    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid Width="1280" Height="690">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- 퍼즐 레이어 -->
        <TabControl Background="Transparent">
            <TabItem Header="Tab 1">
                <uc:NonoBoard x:Name="nonoBoard0"/>
            </TabItem>
            <TabItem Header="Tab 2">
                <uc:NonoBoard x:Name="nonoBoard1"/>
            </TabItem>
            <TabItem Header="Tab 3">
                <uc:NonoBoard x:Name="nonoBoard2"/>
            </TabItem>
            <TabItem Header="Tab 4">
                <uc:NonoBoard x:Name="nonoBoard3"/>
            </TabItem>
            <TabItem Header="Tab 5">
                <uc:NonoBoard x:Name="nonoBoard4"/>
            </TabItem>
        </TabControl>
        <TextBlock Text="Clear!" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="150"
                   Visibility="{Binding ElementName=nonoBoard0, Path=GameBoard.IsSolved, Converter={StaticResource BoolToVisibilityConverter}}"/>
        <Grid Grid.Column="1">
            <!-- 일시정지 버튼 -->
            <Button x:Name="pauseButton"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="20"
                    Height="100"
                    Width="100"
                    FontSize="70">
                <Grid Height="100" Width="100">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Width="16" Height="56" Fill="Black" Grid.Column="1"/>
                    <Rectangle Width="16" Height="56" Fill="Black" Grid.Column="3"/>
                </Grid>

            </Button>

            <!-- 타이머 -->
            <Label HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0 0 0 20"
                   Content="0 : 00"
                   FontSize="70"/>
        </Grid>
    </Grid>
</Page>
